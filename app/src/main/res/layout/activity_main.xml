<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueLight"
    tools:context=".MainActivity">

    <TextView
        android:text="@string/app_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/activity_title_textSize"
        android:paddingBottom="@dimen/activity_title_margin"
        android:paddingTop="@dimen/activity_title_margin"
        android:id="@+id/textView" />

    <Button
        style="@style/udacityBtn"
        android:text="@string/buttonApp1"/>

    <Button
        style="@style/udacityBtn"
        android:text="@string/buttonApp2"/>

    <Button
        style="@style/udacityBtn"
        android:text="@string/buttonApp3"/>

    <Button
        style="@style/udacityBtn"
        android:text="@string/buttonApp4"/>

    <Button
        style="@style/udacityBtn"
        android:text="@string/buttonApp5"/>

    <Button
        style="@style/udacityBtn"
        android:textColor="@android:color/white"
        android:background="@color/colorRed"
        android:text="@string/buttonApp6"/>

</LinearLayout>