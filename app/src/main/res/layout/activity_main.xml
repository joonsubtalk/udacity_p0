<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/colorBlueLight"
    tools:context=".MainActivity">

    <TextView
        android:text="@string/app_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="@dimen/activity_title_textSize"
        android:textStyle="bold"
        android:paddingBottom="@dimen/activity_title_margin"
        android:paddingTop="@dimen/activity_title_margin"
        android:id="@+id/textView" />

    <Button
        android:layout_width="@dimen/activity_button_width"
        android:layout_height="wrap_content"
        android:text="@string/buttonApp1"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <Button
        android:layout_width="@dimen/activity_button_width"
        android:layout_height="wrap_content"
        android:text="@string/buttonApp2"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <Button
        android:layout_width="@dimen/activity_button_width"
        android:layout_height="wrap_content"
        android:text="@string/buttonApp3"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <Button
        android:layout_width="@dimen/activity_button_width"
        android:layout_height="wrap_content"
        android:text="@string/buttonApp4"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <Button
        android:layout_width="@dimen/activity_button_width"
        android:layout_height="wrap_content"
        android:text="@string/buttonApp5"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@android:color/holo_orange_dark"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

    <Button
        android:layout_width="@dimen/activity_button_width"
        android:layout_height="wrap_content"
        android:text="@string/buttonApp6"
        android:layout_gravity="center"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_dark"
        android:layout_marginBottom="@dimen/activity_vertical_margin"/>

</LinearLayout>